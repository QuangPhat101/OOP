{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "RealBuild",
            "command": "bash",
            "args": [
                "-c",
                "/usr/bin/g++-14 -std=c++23 -fdiagnostics-color=always -g \"${file}\" \"${fileDirname}/../lib\"/*.cpp -o \"${fileDirname}/${fileBasenameNoExtension}\" -mconsole"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Build task for real project using C++23"
        },
        {
            "type": "cppbuild",
            "label": "MockBuild",
            "command": "bash",
            "args": [
                "-c",
                "/usr/bin/g++-14 -std=c++23 -mconsole -fdiagnostics-color=always -g \"${file}\" \"${fileDirname}/../mock\"/*.cpp -o \"${fileDirname}/${fileBasenameNoExtension}\""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Build mock project using C++23"
        },
        {
            "type": "cppbuild",
            "label": "UniversalBuild",
            "command": "bash",
            "args": [
                "-c",
                "/usr/bin/g++-14 -std=c++23 -fdiagnostics-color=always -g $(find . -name '*.cpp') -o \"${fileDirname}/${fileBasenameNoExtension}\"-mconsole"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Universal C++ build task for all .cpp files"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++23",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-mconsole"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        }
    ]
}
